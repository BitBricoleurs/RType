{
  "name": "map-creator",
  "version": "0.1.0",
  "private": true,
  "main": "src/electron/main.js",
  "author": "Alexandre Lagasse",
  "description": "map creator",
  "homepage": ".",
  "dependencies": {
    "@blueprintjs/core": "^5.6.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "eslint-config-react-app": "^7.0.1",
    "file-saver": "^2.0.5",
    "pixi.js": "^7.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-file-manager": "^1.2.4",
    "react-router-dom": "^6.17.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "electron-start": "electron ./src/electron/main.js",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "react-build": "react-scripts build",
    "electron-pack": "electron-builder",
    "build": "npm run react-build && npm run electron-pack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package-linux": "electron-packager . MapCreator --platform=linux --arch=x64 --icon=public/mapCreator.ico --overwrite --out=release-builds\n",
    "package-win": "electron-packager . MapCreator --platform=win32 --arch=x64 --icon=public/mapCreator.ico --overwrite --out=release-builds\n",
    "package-macos": "electron-packager . MapCreator --platform=darwin --arch=x64 --icon=public/mapCreator.ico --overwrite --out=release-builds\n"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourcompany.mapcreator",
    "productName": "MapCreator",
    "directories": {
      "output": "build"
    },
    "files": [
      "package.json",
      "build/**/*",
      "electron/main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icons/"
    }
  }
}
